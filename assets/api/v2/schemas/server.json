{
	"$schema": "http://json-schema.org/schema#",
	"$id": "http://sauertracker.net/api/v2/schema/server.json",
	"title": "Server",
	"description": "A single server",
	"type": "object",
	"allOf": [
		{ "$ref": "defs.json#/definitions/server" },
		{
			"properties": {
				"descriptionStyled": {}, "description": {}, "clients": {}, "gameMode": {}, "gameType": {}, "meta": {}, "mapName": {}, "country": {}, "countryName": {}, "host": {}, "port": {}, "info": {},
				"maxClients": { "type": "number", "minimum": 0, "maximum": 128 },
				"masterMode": { "$ref": "defs.json#/definitions/masterMode" },
				"isFull": { "type": "boolean" },
				"zombie": { "type": "boolean" },
				"timeLeft": { "type": "number", "minimum": 0 },
				"timeLeftString": { "type": "string" },
				"players": { "type": "array", "items": { "$ref": "defs.json#/definitions/player" } },
				"teams": { "type": "array", "items": { "$ref": "defs.json#/definitions/team" } },
				"totalGames": { "type": "number" },
				"rank": { "type": "number" }
			},
			"additionalProperties": false
		}
	]
}
