{
	"$schema": "http://json-schema.org/schema#",
	"$id": "http://sauertracker.net/api/v2/schema/servers.json",
	"title": "Servers",
	"description": "List of all available server",
	"type": "array",
	"items": {
		"allOf": [
			{ "$ref": "defs.json#/definitions/server" },
			{
				"type": "object",
				"properties": {
					"descriptionStyled": {}, "description": {}, "clients": {}, "gameMode": {}, "gameType": {}, "meta": {}, "mapName": {}, "country": {}, "countryName": {}, "host": {}, "port": {}, "info": {},
					"maxClients": { "type": "number", "minimum": 0, "maximum": 128 },
					"masterMode": { "$ref": "defs.json#/definitions/masterMode" },
					"isFull": { "type": "boolean" },
					"zombie": { "type": "boolean" },
					"timeLeft": { "type": "number", "minimum": 0 },
					"timeLeftString": { "type": "string" },
					"players": { "type": "array", "items": { "type": "string" } }
				},
				"additionalProperties": false
			}
		]
	}
}
