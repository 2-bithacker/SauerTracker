{
	"$schema": "http://json-schema.org/schema#",
	"$id": "http://sauertracker.net/api/v2/schema/player.json",
	"title": "Player",
	"description": "Player entry",
	"type": "object",
	"properties": {
		"id": { "type": "number" },
		"name": { "type": "string", "minimumLength": 1, "maximumLength": 15 },
		"frags": { "type": "number" },
		"flags": { "type": "number" },
		"deaths": { "type": "number" },
		"kpd": { "type": "number" },
		"acc": { "type": "number" },
		"tks": { "type": "number" },
		"country": { "type": "string", "minimumLength": 2 },
		"countryName": { "type": "string" },
		"elo": { "type": "number" },
		"instaStats": { "$ref": "defs.json#/definitions/modeStats" },
		"efficStats": { "$ref": "defs.json#/definitions/modeStats" },
		"online": { "type": "boolean" },
		
		"clan": { "type": "string" },
		"clanTag": { "type": "string" },
		"totalGames": { "type": "number", "minimum": 0 },
		"rank": { "type": "number", "minimum": 1 },
		"duelCount": { "type": "number", "minimum": 0 },
		"duelWins": { "type": "number", "minimum": 0 },
		"duelLosses": { "type": "number", "minimum": 0 },
		"duelTies": { "type": "number", "minimum": 0 },
		"latestGames": {
			"type": "array",
			"items": {
				"type": "object",
				"allOf": [
					{ "$ref": "defs.json#/definitions/game" },
					{
						"properties": {
							"descriptionStyled": {}, "description": {}, "clients": {}, "gameMode": {}, "gameType": {}, "meta": {}, "mapName": {}, "country": {}, "countryName": {}, "host": {}, "port": {}, "info": {}, "id": {}, "time": {},
							"frags": { "type": "number" },
							"flags": { "type": "number" },
							"deaths": { "type": "number" },
							"tks": { "type": "number" },
							"kpd": { "type": "number" },
							"acc": { "type": "number" }
						},
						"additionalProperties": false
					}
				]
			}
		}
	},
	"additionalProperties": false
}
