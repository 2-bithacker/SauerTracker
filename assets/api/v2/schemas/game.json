{
	"$schema": "http://json-schema.org/schema#",
	"$id": "http://sauertracker.net/api/v2/schema/game.json",
	"title": "Game",
	"description": "A single game",
	"type": "object",
	"allOf": [
		{ "$ref": "defs.json#/definitions/server" },
		{
			"properties": {
				"descriptionStyled": {}, "description": {}, "clients": {}, "gameMode": {}, "gameType": {}, "meta": {}, "mapName": {}, "country": {}, "countryName": {}, "host": {}, "port": {}, "info": {},
				"id": { "type": "number" },
				"time": { "type": "string", "format": "date-time" },
				"players": { "type": "array", "items": { "$ref": "defs.json#/definitions/player" } },
				"teams": { "type": "array", "items": { "$ref": "defs.json#/definitions/team" } }
			},
			"additionalProperties": false
		}
	]
}
